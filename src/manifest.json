{
  "manifest_version": 2,
  "name": "Patrol",
  "description": "my test extension",
  "version": "1.0",
  "icons": { "512": "icon.png"},
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_icon": "yellow.png",
    "default_title": "Open page"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*","https://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}